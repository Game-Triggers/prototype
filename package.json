{
  "name": "gametriggers",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:unified": "node server.js",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check-types": "turbo run check-types",

    "build:schemas": "cd schemas && tsc",
    "build:schemas:watch": "cd schemas && tsc --watch",
    "start": "next start",
    "start:unified": "NODE_ENV=production node server.js",
    "nest:install": "cd backend && npm install",
    "nest:dev": "cd backend && npm run start:dev",
    "nest:build": "cd backend && npm run build",
    "nest:start": "cd backend && npm run start",
    "create:admin": "node backend/scripts/create-admin.js",
    "migrate:streak": "node scripts/migrate-streak-production.js",
    "build:production": "npm run migrate:streak && npm run build",
    "deploy": "npm run migrate:streak && npm run build && npm run start:unified",
    "migrate:users": "npx ts-node scripts/migrate-user-roles.ts",
    "migrate:users:dry-run": "npx ts-node scripts/migrate-user-roles.ts --dry-run --verbose",
    "migrate:users:rollback": "npx ts-node scripts/migrate-user-roles.ts --rollback",
    "db:update-schema": "npx ts-node scripts/update-database-schema.ts",
    "test:migration": "npx ts-node scripts/test-migration.ts",
    "validate:roles": "npx ts-node scripts/role-validation.ts",
    "test:scripts": "node scripts/test-scripts.js"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@stripe/stripe-js": "^7.2.0",
    "@types/formidable": "^3.4.5",
    "axios": "^1.10.0",
    "child_process": "^1.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "formidable": "^3.5.4",
    "framer-motion": "^12.23.12",
    "http": "^0.0.1-security",
    "lucide-react": "^0.503.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.13.2",
    "next": "^15.3.5",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.4",
    "socket.io": "^4.8.1",
    "sonner": "^2.0.5",
    "stripe": "^18.0.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.8",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.6",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
